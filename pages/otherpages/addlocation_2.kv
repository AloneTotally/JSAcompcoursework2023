<AddLocationScreen_2>
  name: 'addlocation_2'
  BoxLayout:
    id: appwrapper
    orientation: "vertical"
    spacing: 30

    MDTopAppBar:
      title: "Foodie - Add Location"
      left_action_items: [['arrow-left', lambda x: app.page_change("addlocation_1", "right")]]

    Label:
      font_size: 50
      bold: True
      text: "Location photo"
      padding: (20, 0)
    
    BoxLayout:
      size_hint_y: 2
      orientation: "vertical"
      spacing: 30
      id: camerawrapper
        
      Camera:
        id: camera
        resolution: (640, 480)
        # play: False
      
      # Image:
      #   id: location_image
      #   source: "../location.png"
    
    MDFillRoundFlatButton:
      text: "Submit new location"
      on_press: app.root.current_screen.submit_new_location()

    MDFillRoundFlatButton:
      id: take_photo
      text: "Take photo"
      on_press: app.root.current_screen.take_photo(1)