<HistoryItemScreen>
  name: 'historyitem'

  BoxLayout:
    orientation: 'vertical'
    spacing: 0

    MDTopAppBar:
      title: "Foodie"
      left_action_items: [['arrow-left', lambda x: app.back_homepage()]]

    MDLabel:
      font_size: 40
      bold: True
      text: "Macdonalds"
      padding: (20, 0)

    MDLabel:
      font_size: 30
      text: "Eaten at 8:30 am"
      padding: (20, 0)

    MDLabel:
      font_size: 40
      bold: True
      text: "Where it was eaten"
      padding: (20, 0)

    MapView:
      id: add_location_map
      double_tap_zoom: True
      # size: min(root.height, root.width), min(root.height, root.width)
      on_lat: print('lat:', self.lat)
      on_lon: print('lon:', self.lon)
      lon: 103.76313504803471
      lat: 1.3784949677817633
      zoom: 18
      pos_hint: {'center_x': 0.5, 'y': 0.5}
      size_hint_x: 0.9
      size_hint_y: 4
    MDLabel:
      font_size: 40
      bold: True
      text: "Leave a review..."
      padding: (20,20)
    BoxLayout:
      orientation: 'horizontal'
      padding: (20, 20)
      BoxLayout:
        orientation: 'vertical'
        MDLabel:
          font_size: 30
          bold: True
          text: "Macdonalds"
        MDLabel:
          font_size: 25
          text: "45 Reviews"
          
        
    BoxLayout: # this contains the stars
      orientation: 'horizontal'
      spacing: 0
      
      MDIconButton:
        theme_text_color: "Custom"
        # text_color: app.theme_cls.primary_color
        text_color: "#f6ae00"
        icon: "star"
      MDIconButton:
        icon: "star"
        theme_text_color: "Custom"
        text_color: "#f6ae00"
      MDIconButton:
        icon: "star"
        theme_text_color: "Custom"
        text_color: "#f6ae00"
      MDIconButton:
        icon: "star"
        theme_text_color: "Custom"
        text_color: "#f6ae00"
      MDIconButton:
        icon: "star"
        theme_text_color: "Custom"
        text_color: "#f6ae00"
    MDTextField:
      hint_text: "Description"
      multiline: True
      max_text_length: 100
      padding: (20,0)

    MDFillRoundFlatButton:
      text: "Submit"
      pos_hint_x: 1
      padding: (20,20)

      




      
    
