<ReviewsPage>
  name: "reviewspage"
  BoxLayout:
    orientation: 'vertical'
    spacing: 0
    MDTopAppBar:
      title: "Foodie - Reviews"
      left_action_items: [['arrow-left', lambda x: app.page_change("viewlocation", "right")]]
    BoxLayout:
      size_hint_y: 0.2
      padding: (20, 40)
      orientation: 'horizontal'
      MDLabel:
        id: location_label
        font_size: 50
        bold: True
        # text: "Macdonalds Reviews"
      MDLabel:
        font_size: 30
        bold: True
        color: 0.655,0.545,0.98,1
        id: average_rating
        # text: "Average: 4.9 of 5 stars"
        pos_hint: {'x': 2, 'y': 0}
    ScrollView:
      MDList:
        id: review_list
        