<ViewLocation>
  name: 'viewlocation'
  BoxLayout:
    orientation: 'vertical'
    spacing: 0

    MDTopAppBar:
      title: "Foodie"
      left_action_items: [['arrow-left', lambda x: app.back_homepage()]]

    MDLabel:
      id: location_name
      font_size: 40
      bold: True
      text: "Hillion residences"
      padding: (20,20)

    MDLabel:
      id: location_description
      font_size: 20
      text: "Lorem ipsum sed felis eget velit aliquet sagittis id consectetur purus ut faucibus pulvinar elementum integer enim neque volutpat ac tincidunt vitae."
      padding: (20,20)

    MapView:
      id: view_location_map
      double_tap_zoom: True
      # size: min(root.height, root.width), min(root.height, root.width)
      on_lat: print('lat:', self.lat)
      on_lon: print('lon:', self.lon)
      lon: 103.76313504803471
      lat: 1.3784949677817633
      zoom: 18
      pos_hint: {'center_x': 0.5, 'y': 0.5}
      size_hint_x: 0.9
      size_hint_y: 4
    BoxLayout:
      MDLabel:
        font_size: 70
        bold: True
        text: "Review"
        padding: (20,40)
        size_hint_x: 2

      MDIconButton:
        icon: "chevron-right"
        size_hint_x: 0.3
        text_color: app.theme_cls.primary_color
        on_release: app.page_change("reviewspage", "left")

      
    BoxLayout:
      size_hint_y: 3.5
      orientation: 'horizontal'
      
      BoxLayout:
        orientation: 'vertical'
        MDLabel:
          id: rating
          font_size: 100
          bold: True
          text: "4.5"
          padding: (20,20)
          size_hint_x: 2
        CustomMDLabel:
          id: review_count
          text: "5 Reviews"
      BoxLayout:
        orientation: 'vertical'
        CustomMDLabel:
          text: "1"
        CustomMDLabel:
          text: "2"
        CustomMDLabel:
          text: "3"
        CustomMDLabel:
          text: "4"
        CustomMDLabel:
          text: "5"

      BoxLayout:
        orientation: 'vertical'
        size_hint_x: 4

        CustomProgressBar:
          id: rating_one
          value: 60
        CustomProgressBar:
          id: rating_two
          value: 30
        CustomProgressBar:
          id: rating_three
          value: 90
        CustomProgressBar:
          id: rating_four
          value: 20
        CustomProgressBar:
          id: rating_five
          value: 70