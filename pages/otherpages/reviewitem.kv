<ReviewItemScreen>
  BoxLayout:
    orientation: 'vertical'
    spacing: 0
    MDTopAppBar:
      title: "Foodie - Review"
      left_action_items: [['arrow-left', lambda x: app.page_change("reviewspage", "right")]]

    MDLabel:
      text: "Reviewer"
      font_size: 40
      padding: (30,0)
    MDLabel:
      id: reviewer
      text: "Jayden"
      padding: (30,0)

    MDLabel:
      text: "Rating"
      font_size: 40
      padding: (30,0)
    MDLabel:
      id: rating
      text: "3 of 5 stars"
      padding: (30,0)
    BoxLayout: # this contains the stars
      orientation: 'horizontal'
      spacing: 0
      padding: (0,0)
      
      MDIconButton:
        id: star_one
        theme_text_color: "Custom"
        # text_color: app.theme_cls.primary_color
        text_color: "#d6d6d6"
        icon: "star"
      MDIconButton:
        id: star_two
        icon: "star"
        theme_text_color: "Custom"
        text_color: "#d6d6d6"
      MDIconButton:
        id: star_three
        icon: "star"
        theme_text_color: "Custom"
        text_color: "#d6d6d6"
      MDIconButton:
        id: star_four
        icon: "star"
        theme_text_color: "Custom"
        text_color: "#d6d6d6"
      MDIconButton:
        id: star_five
        icon: "star"
        theme_text_color: "Custom"
        text_color: "#d6d6d6"
        
    MDLabel:
      text: "Description"
      font_size: 40
      padding: (30,0)
    MDLabel:
      id: description
      text: "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi eget lorem efficitur, fermentum risus vel, fringilla ex. Cras interdum ullamcorper blandit"
      padding: (30,0)
    MapView:
      id: add_location_map
      double_tap_zoom: True
      # size: min(root.height, root.width), min(root.height, root.width)
      on_lat: print('lat:', self.lat)
      on_lon: print('lon:', self.lon)
      lon: 103.76313504803471
      lat: 1.3784949677817633
      zoom: 18
      pos_hint: {'center_x': 0.5, 'y': 0.5}
      size_hint_x: 0.9
      size_hint_y: 4
    