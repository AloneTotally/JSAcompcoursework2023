<ReviewItemScreen>
  BoxLayout:
    orientation: 'vertical'
    spacing: 0
    MDTopAppBar:
      title: "Foodie - Review"
      left_action_items: [['arrow-left', lambda x: app.page_change("reviewspage", "right")]]
    FloatLayout:
      
      MDLabel:
        text: "Reviewer"
        font_size: 40
        padding: (30,0)
        bold: True
        pos_hint: {'y': 0.45}
      MDLabel:
        id: reviewer
        text: "Jayden"
        padding: (30,0)
        pos_hint: {'y': 0.4}

      MDLabel:
        text: "Rating"
        font_size: 40
        padding: (30,0)
        bold: True
        pos_hint: {'y': 0.3}
      MDLabel:
        id: rating
        # text: "3 of 5 stars"
        padding: (30,0)
        pos_hint: {'y': 0.25}
      BoxLayout: # this contains the stars
        orientation: 'horizontal'
        spacing: 0
        padding: (0,0)
        pos_hint: {'y': 0.65}
        MDIconButton:
          id: star_one
          theme_text_color: "Custom"
          # text_color: app.theme_cls.primary_color
          text_color: "#d6d6d6"
          icon: "star"
        MDIconButton:
          id: star_two
          icon: "star"
          theme_text_color: "Custom"
          text_color: "#d6d6d6"
        MDIconButton:
          id: star_three
          icon: "star"
          theme_text_color: "Custom"
          text_color: "#d6d6d6"
        MDIconButton:
          id: star_four
          icon: "star"
          theme_text_color: "Custom"
          text_color: "#d6d6d6"
        MDIconButton:
          id: star_five
          icon: "star"
          theme_text_color: "Custom"
          text_color: "#d6d6d6"
          
      MDLabel:
        text: "Review text"
        font_size: 40
        padding: (30,0)
        bold: True
        pos_hint: {'y': 0.05}
      MDLabel:
        id: review_text
        padding: (30,0)
        pos_hint: {'y': 0}
